{% if pattern is not empty %}

  {{ pattern.meta }}
  {# Rendered pattern preview. #}
  <div class="pattern-preview">
    {% for variant in pattern.previews %}
      <h3>{{ variant.meta['#variant'].label }}</h3><hr>
      <span>{{ variant.meta['#variant'].description }}</span>
      {{ variant.rendered }}
    {% endfor %}
  </div>

{% endif %}
